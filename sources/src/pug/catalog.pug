                                include ./blocks/icon_plus
                                include ./blocks/icon_minus
                            .filters__wrapper
                                .filters__search
                                    input.brand-search(type="search" placeholder='Поиск марки авто' autocomplete="off")

                                .filters__brands

                                    -
