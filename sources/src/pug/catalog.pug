                                include ./blocks/icon_plus
                                include ./blocks/icon_minus
                            .filters__wrapper.filters__wrapper_car_body

                                .filters__brands


                                    ul.filters__list

                                        li.filters__item 
                                            label.filters__label
                                                input.filters__checkbox(type="checkbox")
                                                span
