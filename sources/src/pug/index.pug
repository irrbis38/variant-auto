    section.main_intro
        .main_intro__container
            h1.main_intro__title.main_fluid__title Авто с&nbsp;пробегом

            p.main_intro__subtitle Которые #[span прошли необходимые] диагностику и подготовку

            .main_intro__wrapper

                -
                    var main_intro_slides = [
                        {
                            src: 'main_intro/main_intro_slide1',
                            isActive: true
                        },
                        {
                            src: 'main_intro/main_intro_slide2',
                            isActive: false
                        },
                        {
                            src: 'main_intro/main_intro_slide3',
                            isActive: false
                        },
                        {
                            src: 'main_intro/main_intro_slide4',
                            isActive: false
                        },
                        {
                            src: 'main_intro/main_intro_slide5',
                            isActive: false
                        }
                    ];

                .main_intro__slider

                    each slide in main_intro_slides

                        if slide.isActive

                            .main_intro__slide.active
                                +picture(slide.src, 'jpg', 'x2')
                                .main_intro__progress

                        else 
                            
                            .main_intro__slide
                                +picture(slide.src, 'jpg', 'x2')
                                .main_intro__progress



    .q_selection
        .container 
            .q_selection__wrapper

                .q_selection__brand.q_selection__select
                    input.q_selection__input(type="text" placeholder="Выберите или введите")
                    span
                    .q_selection__group
                        ul.q_selection__list
                            each item in cars
